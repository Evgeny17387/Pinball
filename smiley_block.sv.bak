module hart_display(
	input		logic				clk,
	input		logic				resetN,
	input		logic	[10:0]	PixelX,
	input		logic	[10:0]	PixelY,
	input		logic				hart_select,
	output	logic	[7:0]		hart_RGB,
	output	logic				HartDrawingRequest
);

logic [10:0] 	offsetX;
logic [10:0] 	offsetY;

localparam logic signed	[10:0] topLeftX = 32;
localparam logic signed [10:0] topLeftY = 32;

logic drawingRequest;

square_object square_object_inst(
// input
	.clk(clk),
	.resetN(resetN),
	.pixelX(PixelX),
	.pixelY(PixelY),
	.topLeftX(topLeftX),
	.topLeftY(topLeftY),
// output
	.offsetX(offsetX),
	.offsetY(offsetY),
	.drawingRequest(drawingRequest),
);

HartsMatrixBitMap HartsMatrixBitMap_inst(
// input
	.clk(clk),
	.resetN(resetN),
	.offsetX(offsetX),
	.offsetY(offsetY),
	.InsideRectangle(drawingRequest),
	.random_hart(hart_select),
// output
	.RGBout(hart_RGB)
);

endmodule
